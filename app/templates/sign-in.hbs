<header class="header signInheader">
  <div class="login clearfix">
    <div class="tabs">
        <span align="center">
                <a
                  style="margin:0 auto;display: -webkit-box;display: -ms-flexbox;display: flex;-webkit-box-align: center;-ms-flex-align: center;align-items: center;-webkit-box-pack: center;-ms-flex-pack: center;justify-content: center;font-size: 2.3em;">Sign In</a>
            </span>
    </div>
    <form>
      <ul>
        <li>
          <label class="floating sr-only">Email</label>
          {{input
            type='email'
            class='label-float'
            value=email
            placeholder='Email'
            name=email
          }}
        </li>

        <li style="padding-bottom:20px;">
          <label class="floating sr-only">Password</label>
          {{input
            type='password'
            class='label-float'
            value=password
            placeholder='Password'
            name=pass
          }}
        </li>

      </ul>
      <button {{action 'signIn' 'password'}} type="submit">Sign In</button>
    </form>
  </div>
  <div class="header__logoutcomcals-box">
    <a href="#" {{action 'goBackToIndex'}} class="btn btn--white btn--animated btn--logout">Home</a>
  </div>
</header>